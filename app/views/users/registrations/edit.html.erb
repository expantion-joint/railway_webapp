<div class="device-container">
  <div class="form-container">
    <h2 class="h2">パスワードを入力してください</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="gp-text-red">
        <%= render "users/shared/error_messages", resource: resource %>
      </div>

      <div class="field">
        <%= f.label :email_will_not_change, class: 'label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", readonly: true, class:"device-input-itme" %>
      </div>

      <div class="field">
        <%= f.label :current_password, class: 'label' %>
        <%= f.password_field :current_password, autocomplete: "new-password", class:"device-input-itme", class:"device-input-itme"%>
      </div>

      <div class="field">
        <%= f.label :new_password,"新しいパスワード（大文字・小文字・数字・記号を含む8文字以上）", class: 'label' %>
        <%= f.password_field :password, autocomplete: "new-password", class:"device-input-itme", class:"device-input-itme"%>
      </div>

      <div class="field">
        <%= f.label :new_password_confirmation, class: 'label' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"device-input-itme"  %>
      </div>

      <div class="actions">
        <%= f.submit "更新する" %>
      </div>
    <% end %>

